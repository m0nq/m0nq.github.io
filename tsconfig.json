{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@*": ["./src/*"]
        },
        "types": [
            "@types/jest",
            "jest",
            "@testing-library/jest-dom",
            "@types/node",
            "node",
            "cypress",
            "@testing-library/cypress"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts", "./plugins/**/*"]
}
